{
  "name": "electron-react-typescript",
  "version": "1.0.0",
  "description": "Electron boilerplate with React and TypeScript",
  "main": "dist/main.js",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:tsc": "tsc -w -p tsconfig.main.json",
    "dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
    "dev:electron": "wait-on ./dist/index.html && cross-env NODE_ENV=\"development\" electron .",
    "predev": "rimraf dist release",
    "build": "cross-env NODE_ENV=\"production\" webpack --progress",
    "prepackage": "run-s predev build",
    "package": "ts-node ./electron-builder.ts",
    "lint": "eslint --cache --fix .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "author": {
    "name": "Asahi Takenouchi",
    "url": "https://takenouchi.work"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.6.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.5",
    "electron-reload": "^2.0.0-alpha.1",
    "electron-search-devtools": "^1.5.3",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "mini-css-extract-plugin": "^2.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "wait-on": "^6.0.0",
    "webpack": "^5.68.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
